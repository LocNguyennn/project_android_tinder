<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Signup">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dating_chat_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" />

        <EditText
            android:id="@+id/signUpName"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="277dp"
            android:background="@drawable/edt_background"
            android:hint="Name"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/signUpEmail"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="352dp"
            android:background="@drawable/edt_background"
            android:hint="Email"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/signUpPassword"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="204dp"
            android:background="@drawable/edt_background"
            android:hint="Password"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="128dp"
            android:background="@drawable/edt_background"
            android:hint="Confirm your password"
            android:paddingLeft="15dp" />

        <TextView
            android:id="@+id/gettingStarted"
            android:layout_width="wrap_content"
            android:layout_height="49dp"

            android:layout_below="@+id/appLogo"
            android:layout_alignStart="@+id/appLogo"
            android:layout_marginStart="-49dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="12dp"
            android:text="Create your own account"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmPassword"
            android:layout_alignStart="@+id/confirmPassword"
            android:layout_alignEnd="@+id/confirmPassword"
            android:layout_marginStart="115dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/royalblue_background"
            android:fontFamily="sans-serif-black"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="215dp"
            android:layout_height="28dp"
            android:layout_below="@+id/confirmPassword"
            android:layout_alignStart="@+id/confirmPassword"
            android:layout_alignEnd="@+id/confirmPassword"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-110dp"
            android:layout_marginEnd="106dp"
            android:text="Already have an account ?"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_below="@+id/confirmPassword"
            android:layout_alignEnd="@+id/confirmPassword"
            android:layout_marginTop="-113dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/royalblue_background"
            android:fontFamily="sans-serif-black"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>
</layout>